# Environment Configuration Template
# Copy this file to config.env and customize for your environment

# MLflow Configuration
MLFLOW_TRACKING_URI=file://./mlruns
MLFLOW_BACKEND_STORE_URI=file://./mlruns
MLFLOW_ARTIFACT_ROOT=./artifacts

# Airflow Configuration
AIRFLOW_HOME=./.airflow
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_WEBSERVER_HOST=127.0.0.1
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User

# Streamlit Dashboard Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=127.0.0.1

# Java Configuration (macOS Homebrew)
JAVA_HOME=/opt/homebrew/opt/openjdk@11/libexec/openjdk.jdk/Contents/Home

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=walmart-mlops

# Model Configuration
MODEL_NAME=demand_gbt
MODEL_STAGE=Production
PREDICTION_HORIZON_DAYS=7

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_DELTA_BRONZE=./data/delta/bronze
DATA_DELTA_SILVER=./data/delta/silver
DATA_DELTA_GOLD=./data/delta/gold
OUTPUT_PREDICTIONS_PATH=./outputs/predictions
